# Petzito Flow Builder - Environment Configuration
# Copy this file to .env.local and modify as needed

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_ENVIRONMENT=development

# API Configuration (for future backend integration)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_LOGGING=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_MAX_FIELDS_PER_FORM=50
REACT_APP_MAX_FORMS_PER_SECTION=20
REACT_APP_MAX_SECTIONS_PER_FLOW=100

# Storage Configuration
REACT_APP_STORAGE_KEY=petzito-flow-data
REACT_APP_STORAGE_VERSION=1.0.0

# Development Tools
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_ENABLE_ERROR_BOUNDARY=true
